{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@github/github-feature-home": ["libs/github/feature-home/src/index.ts"],
      "@github/github-feature-shell": ["libs/github/feature-shell/src/index.ts"],
      "@github/shared-data-access-api": ["libs/shared/data-access/api/src/index.ts"],
      "@github/shared-data-access-api/mocks": ["libs/shared/data-access/api/mocks/src/index.ts"],
      "@github/shared-data-access-router": ["libs/shared/data-access/router/src/index.ts"],
      "@github/shared-data-access-testing": ["libs/shared/data-access/testing/src/index.ts"],
      "@github/shared-ui-components": ["libs/shared/ui/components/index.ts"],
      "@github/shared-ui-components/skeleton": ["libs/shared/ui/components/skeleton/index.ts"],
      "@github/shared-ui-core": ["libs/shared/ui/core/index.ts"],
      "@github/shared-ui-core/*": ["libs/shared/ui/core/*"],
      "@github/shared-util-environment": ["libs/shared/util/environment/src/index.ts"],
      "@github/shared-util-faker": ["libs/shared/util/faker/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
